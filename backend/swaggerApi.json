    "servers": [
        {
            "url": "http://localhost:5002",
            "description": "Development Environment"
        },
        {
            "url": "https://ic38.herokuapp.com",
            "description": "Live Environment"
        }
    ],
    "tags": [
        {
            "name": "User",
            "description": ""
        }
    ],
    "paths": {
        "/api/movie/create": {
            "post": {
                "tags": [
                    "Movies"
                ],
                "summary": "ADDS A NEW MOVIE",
                "produces": "application/json",
                "consumes": "multipart/form-data",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "my Course"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "this a course about MERN stack"
                                    },
                                    "release_date": {
                                        "type": "string",
                                        "example": "fgsdfgsdf"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "dsfgdsfg"
                                    },
                                    "rating": {
                                        "type": "number",
                                        "example": 3
                                    },
                                    "language": {
                                        "type": "string",
                                        "example": "English"
                                    },
                                    "duration": {
                                        "type": "string",
                                        "example": "2 hours 30 min"
                                    },
                                    "isSeries": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "director": {
                                        "type": "string",
                                        "example": "K.K.Rajeev"
                                    },
                                    "posterImage": {
                                        "type": "file"
                                    },
                                    "video": {
                                        "type": "file"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Verified SuccessFully"
                    },
                    "401": {
                        "description": "Unauthorized access to API"
                    }
                }
            }
        }
    }
}